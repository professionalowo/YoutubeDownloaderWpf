<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:player="clr-namespace:YoutubeDownloader.Core.Services.Mp3Player;assembly=YoutubeDownloader.Core"
             x:DataType="player:Mp3Player"
             x:Class="YoutubeDownloader.Maui.PlayerPage">
    <ContentPage.Content>
        <Grid Padding="30,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Entry Grid.Row="0"
                   ReturnType="Search"
                   HorizontalOptions="Fill"
                   VerticalTextAlignment="Center"
                   Placeholder="Search..." />
            <CollectionView Grid.Row="1"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"
                            SelectionMode="Single"
                            ItemsSource="{Binding Files, Mode=OneWay}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="player:Mp3File">
                        <Grid HorizontalOptions="Fill"
                              VerticalOptions="Fill"
                              HeightRequest="45">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label VerticalTextAlignment="Center" Grid.Column="0" Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
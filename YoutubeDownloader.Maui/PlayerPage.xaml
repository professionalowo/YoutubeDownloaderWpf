<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:player="clr-namespace:YoutubeDownloader.Core.Services.Mp3Player;assembly=YoutubeDownloader.Core"
             x:DataType="player:Mp3Player"
             x:Class="YoutubeDownloader.Maui.PlayerPage">
    <ContentPage.Content>
        <Grid Padding="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="0.2*"></RowDefinition>
            </Grid.RowDefinitions>
            <Entry Grid.Row="0"
                   ReturnType="Search"
                   HorizontalOptions="Fill"
                   VerticalTextAlignment="Center"
                   Placeholder="Search..." />
            <CollectionView Grid.Row="1"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"
                            SelectionMode="Single"
                            ItemsSource="{Binding Files, Mode=OneWay}"
                            ItemTemplate="{StaticResource Mp3FileTemplate}"
                            SelectedItem="{Binding SelectedFile}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
            </CollectionView>
            <Grid Grid.Row="2" VerticalOptions="Fill" HorizontalOptions="Fill">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Start"
                       VerticalOptions="Fill"
                       HorizontalOptions="Fill"
                       LineBreakMode="WordWrap"
                       Text="{Binding SelectedFile.Name, FallbackValue='Currently not playing'}" />
                <Button Grid.Column="1" Text=">" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
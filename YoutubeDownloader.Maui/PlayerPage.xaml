<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:player="clr-namespace:YoutubeDownloader.Core.Services.Mp3Player;assembly=YoutubeDownloader.Core"
             x:DataType="player:Mp3Player"
             x:Class="YoutubeDownloader.Maui.PlayerPage">
    <ContentPage.Content>
        <ListView
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            ItemsSource="{Binding  Files, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell TextColor="Blue" Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
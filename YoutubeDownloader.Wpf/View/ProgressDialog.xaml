<Window x:Class="YoutubeDownloader.Wpf.View.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:YoutubeDownloader.Wpf.View"
        mc:Ignorable="d"
        Title="Ffmpeg Download" Height="120" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Name="StatusText" Text="{Binding Message ,Mode=TwoWay}" Margin="0,0,0,10" />
        <ProgressBar Value="{Binding ProgressValue, Mode=TwoWay}" Name="DownloadProgress" Height="20" Minimum="0"
                     Maximum="1" />
    </StackPanel>
</Window>
<Window x:Class="YoutubeDownloaderWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDownloaderWpf"
        xmlns:v="clr-namespace:YoutubeDownloaderWpf.Util.Validator"
        mc:Ignorable="d"
        Title="Downloader" Height="450" Width="800" MinHeight="200" MinWidth="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" LastChildFill="False" HorizontalAlignment="Center" Width="auto">
            <Label VerticalAlignment="Center">Url:</Label>
            <TextBox Name="UrlTextBox" Width="450" VerticalContentAlignment="Center" Style="{StaticResource textBoxInError}" Validation.ErrorTemplate="{StaticResource validationTemplate}">
                <TextBox.Text>
                    <Binding Path="Url" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <v:UriValidator></v:UriValidator>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Click="Button_Click" Width="150">Download</Button>
            <Label VerticalAlignment="Center">Force Mp3:</Label>
            <CheckBox IsChecked="{Binding ForceMp3,Mode=TwoWay}" VerticalAlignment="Center"/>
        </DockPanel>
        <Grid Grid.Row="1" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center">Name</TextBlock>
            <TextBlock Grid.Column="1" HorizontalAlignment="Center">Progress</TextBlock>
            <TextBlock Grid.Column="2" HorizontalAlignment="Center">Size in MB</TextBlock>
        </Grid>
        <ListView ItemsSource="{Binding DownloadStatuses}" Grid.Row="2" Margin="10,0,10,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding Background}" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                        <ProgressBar Grid.Column="1" Value="{Binding ProgressValue}" Background="White" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Foreground="#FF41C127"/>
                        <TextBlock Grid.Column="2" Text="{Binding Size}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <DockPanel HorizontalAlignment="Center" Grid.Row="3">
            <Button Background="White" Click="Button_Click_Open_Downloads">
                <Span BaselineAlignment="Center">
                    <Image Source="folder.jpg"/>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Downloads</TextBlock>
                </Span>
                
            </Button>
            <Button Click="Button_Click_1">Cancel All</Button>
        </DockPanel>
        <DockPanel Grid.Row="4">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.3">
                Youtube Downloader by professionalowo
            </TextBlock>
        </DockPanel>
    </Grid>
</Window>
